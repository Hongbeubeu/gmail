<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:background="#DA2C1F"
        android:id="@+id/top_bar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_menu_white_24dp" />


        <TextView
            android:id="@+id/inbox"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/btn_menu"
            android:text="Inbox"
            android:textSize="28sp"></TextView>

        <Button
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="375dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="-317dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/inbox"
            android:background="@drawable/ic_search_white_24dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/top_bar"
        android:layout_height="match_parent"/>

</RelativeLayout>